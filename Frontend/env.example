# Configuration Frontend HSE - Permis de Travail
# Copiez ce fichier vers .env.local et ajustez les valeurs

# URL de l'API Backend
VITE_API_URL=http://localhost:3000/api

# Configuration de l'application
VITE_APP_NAME=Système HSE - Permis de Travail
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Système de gestion des permis de travail sécurisés

# Configuration des fonctionnalités
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false

# Configuration des fichiers
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,image/webp

# Configuration des notifications
VITE_TOAST_DURATION=5000
VITE_TOAST_POSITION=top-right

# Configuration du cache
VITE_CACHE_TIME_SHORT=300000
VITE_CACHE_TIME_MEDIUM=900000
VITE_CACHE_TIME_LONG=3600000

# Configuration HSE spécifique
VITE_DEFAULT_PERMIT_DURATION=8
VITE_MAX_PERMIT_DURATION=24
VITE_SIGNATURE_REQUIRED=true
VITE_COMMENT_REQUIRED=true

# Configuration de sécurité
VITE_ENABLE_STRICT_MODE=true
VITE_ENABLE_CSP=true

# Configuration des thèmes
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=false

# Configuration des rapports
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_CSV_EXPORT=true
VITE_ENABLE_CHARTS=true

# Configuration des logs
VITE_ENABLE_CONSOLE_LOGS=true
VITE_LOG_LEVEL=info
